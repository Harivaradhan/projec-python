print("Welcome to Python Pizza Deliveries!")
size = input("What size pizza do you want? S, M, or L ")
add_pepperoni = input("Do you want pepperoni? Y or N ")
extra_cheese = input("Do you want extra cheese? Y or N ")
extraa_cheese=1
s_peperoni=2
ml_peperoni=3
final_bill=0
if(size=="S"):
    final_bill=15
    if(add_pepperoni=="Y"):
        final_bill+=s_peperoni
        #print(f"Your final bill is: ${final_bill}")
    else:
        final_bill=15  
        #print(f"Your final bill is: ${final_bill}")  
elif(size=="M"):
    final_bill=20
    if(add_pepperoni=="Y"):
        final_bill+=ml_peperoni
        #print(f"Your final bill is: ${final_bill}")
    else:
        final_bill=20
       # print(f"Your final bill is: ${final_bill}")
elif(size=="L"):
    final_bill=25
    if(add_pepperoni=="Y"):
        final_bill+=ml_peperoni
       # print(f"Your final bill is: ${final_bill}")
    else:
        final_bill=25  
       # print(f"Your final bill is: ${final_bill}")  
if(extra_cheese=="Y"):
    final_bill+=1
print(f"Your final bill is: ${final_bill}")
